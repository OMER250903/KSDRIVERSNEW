<!DOCTYPE html>
<html lang="he" dir="rtl">
<head>
  <meta charset="UTF-8">
  <title>הוספת נהג חדש</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f3f6fa;
      margin: 0;
      padding: 20px;
      direction: rtl;
    }

    .form-container {
      max-width: 900px;
      margin: 0 auto;
      background-color: #fff;
      border-radius: 12px;
      padding: 30px 40px;
      box-shadow: 0 4px 25px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      margin-bottom: 30px;
      color: #004080;
    }

    .form-group {
      margin-bottom: 15px;
    }

    label {
      font-weight: bold;
      display: block;
      margin-bottom: 5px;
    }

    input, select {
      width: 100%;
      padding: 8px 12px;
      border-radius: 6px;
      border: 1px solid #ccc;
      font-size: 16px;
    }

    .coordinations-container {
      margin-top: 30px;
      padding: 20px;
      border: 2px dashed #0077cc;
      border-radius: 10px;
      background-color: #f9fbff;
    }

    .coordination-set {
      margin-bottom: 20px;
      border-bottom: 1px solid #ccc;
      padding-bottom: 10px;
    }

    button {
      background-color: #004080;
      color: white;
      border: none;
      padding: 10px 18px;
      border-radius: 8px;
      font-size: 16px;
      cursor: pointer;
      margin-top: 20px;
    }

    button:hover {
      background-color: #003366;
    }

    .back-link {
      display: inline-block;
      margin-top: 30px;
      text-decoration: none;
      color: #004080;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h1>הוספת נהג חדש</h1>
    <form action="/add-driver" method="POST">
      <div class="form-group">
        <label for="name">שם מלא</label>
        <input type="text" name="name" id="name" required>
      </div>
      <div class="form-group">
        <label for="idNumber">תעודת זהות</label>
        <input type="text" name="idNumber" id="idNumber" required>
      </div>
      <div class="form-group">
        <label for="phone">טלפון</label>
        <input type="text" name="phone" id="phone" required>
      </div>
      <div class="form-group">
        <label for="employer">שם מעסיק</label>
        <input type="text" name="employer" id="employer" required>
      </div>
      <div class="form-group">
        <label for="employerPhone">טלפון מעסיק</label>
        <input type="text" name="employerPhone" id="employerPhone" required>
      </div>

      <!-- תיאומים -->
      <div class="coordinations-container" id="coordinations">
        <h3>פרטי תיאום</h3>
        <div class="coordination-set">
          <div class="form-group">
            <label>מספר תיאום</label>
            <input type="text" name="coordinationNumber[]" required>
          </div>
          <div class="form-group">
            <label>סוג סחורה</label>
            <input type="text" name="goodsType[]" required>
          </div>
          <div class="form-group">
            <label>מספר משטחים</label>
            <input type="text" name="palletCount[]" required>
          </div>
          <div class="form-group">
            <label>מספר משאית</label>
            <input type="text" name="truckNumber[]" required>
          </div>
          <div class="form-group">
            <label>ארגון תורם</label>
            <input type="text" name="donorOrg[]" required>
          </div>
          <div class="form-group">
  <label>נתיב</label>
  <input type="text" name="route[]" required>
</div>
        </div>
      </div>

      <button type="button" onclick="addCoordination()">➕ הוסף תיאום נוסף</button>
      <br><br>
      <button type="submit">✅ הוסף נהג</button>
    </form>

    <a class="back-link" href="/">🔙 חזרה לרשימה</a>
  </div>

  <script>
    function addCoordination() {
      const container = document.getElementById('coordinations');

      const html = `
        <div class="coordination-set">
          <div class="form-group">
            <label>מספר תיאום</label>
            <input type="text" name="coordinationNumber[]" required>
          </div>
          <div class="form-group">
            <label>סוג סחורה</label>
            <input type="text" name="goodsType[]" required>
          </div>
          <div class="form-group">
            <label>מספר משטחים</label>
            <input type="text" name="palletCount[]" required>
          </div>
          <div class="form-group">
            <label>מספר משאית</label>
            <input type="text" name="truckNumber[]" required>
          </div>
          <div class="form-group">
            <label>ארגון תורם</label>
            <input type="text" name="donorOrg[]" required>
          </div>
        </div>`;

      container.insertAdjacentHTML('beforeend', html);
    }
  </script>
</body>
</html>
