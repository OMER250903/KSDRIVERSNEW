  transition: background-color 0.3s;
  font-size: 18px;
  color: #1565c0;
}

.print-icon:hover {
  background-color: #c8e6c9;
  color: #1b5e20;
  cursor: pointer;
}
.coordination-cell {
  position: relative;
  padding-right: 28px;
}

.add-icon {
  position: absolute;
  top: 4px;
  right: 4px;
  color: #004080;
  font-size: 16px;
  cursor: pointer;
  background: none;
  border: none;
}
.full-width {
  width: 100%;
  table-layout: fixed;
}
.full-width th, .full-width td {
  white-space: normal;
  overflow-wrap: break-word;
  word-break: break-word;
  max-width: 100%;
  vertical-align: middle;
}


@media (max-width: 768px) {
  .coordination-table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
  }

  .coordination-table th,
  .coordination-table td {
    white-space: nowrap;
    padding: 10px 8px;
    font-size: 14px;
  }
}




