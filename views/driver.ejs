  <body>

  <div class="driver-card">
    <div class="top-row">
      <a href="/" class="back-link">🔙 חזרה לרשימת נהגים</a>
    </div>

    <div class="driver-header">
      <img src="<%= driver.image || '/images/driver-default.jpg' %>" alt="תמונת נהג">
      <div class="driver-main">
        <h1><%= driver.name %></h1>
        <div class="status" style="color: <%= driver.status === 'מאושר' ? '#2e7d32' : driver.status === 'מנוע' ? '#c62828' : '#777' %>">
          <i class="fas <%= driver.status === 'מאושר' ? 'fa-check-circle' : driver.status === 'מנוע' ? 'fa-times-circle' : 'fa-question-circle' %>"></i>
          <%= driver.status === 'מאושר' ? 'מאושר' : (driver.status === 'מנוע' ? 'מנוע' : 'לא ידוע') %>
        </div>
      </div>
    </div>

    <div class="info-grid">
      <div class="info-item"><label>ת.ז</label><span><%= driver.idNumber %></span></div>
      <div class="info-item"><label>טלפון</label><span><%= driver.phone %></span></div>
      <div class="info-item"><label>טלפון מעסיק</label><span><%= driver.employerPhone %></span></div>
      <div class="info-item"><label>מעסיק</label><span><%= driver.employer %></span></div>
    </div>

    <div class="divider">📦 רשימת תיאומים</div>

    <% if (Array.isArray(driver.coordinations) && driver.coordinations.length > 0) { %>
<% if (Array.isArray(driver.coordinations) && driver.coordinations.length > 0) { %>
<table class="coord-table full-width">
  <thead>
    <tr>
      <th>מספר תיאום</th>
      <th>סוג סחורה</th>
      <th>מספר משטחים</th>
      <th>מספר משאית</th>
      <th>ארגון תורם</th>
      <th>נתיב</th>
      <th>נבדק</th>
      <th>נבדק על ידי</th>
      <th>שעה</th>
      <th>🖨️</th>
      <th>⚙️</th>
    </tr>
  </thead>
  <tbody>
    <% driver.coordinations.forEach((coord, index) => { %>
      <tr>
<td>
  <div style="display: flex; align-items: center; justify-content: space-between;">
    <span><%= coord.coordinationNumber %></span>
    <button onclick="toggleTransferForm(<%= index %>)"
            style="background:none; border:none; font-size:16px; cursor:pointer; color:#00796b;"
            title="העבר תיאום">
      🔁
    </button>
  </div>

  <!-- טופס ההעברה (יופיע כשתלחץ על 🔁) -->
  <form id="transferForm<%= index %>" class="transfer-form"
        action="/transfer-coordination/<%= driverId %>/<%= index %>"
        method="POST"
        style="display:none; margin-top:6px;">
    <input type="text" name="targetIdNumber" placeholder="ת.ז נהג יעד" required
           style="width: 130px; font-size: 13px;">
    <button type="submit" style="padding: 4px 8px; font-size: 12px;">✔️</button>
  </form>
</td>
        <td><%= coord.goodsType %></td>
        <td><%= coord.palletCount %></td>
<td style="white-space: normal; word-break: break-word;"><%= coord.truckNumber %></td>
        <td><%= coord.donorOrg %></td>
        <td><%= coord.route || '-' %></td>
        <td>
          <form action="/update-coordination-status/<%= driverId %>/<%= index %>" method="POST">
            <label style="display:flex; align-items:center; gap:5px;">
              <input type="checkbox" name="checked" onchange="this.form.submit()" <%= coord.passed ? 'checked' : '' %> >
              נבדק
            </label>
          </form>
        </td>
        <td><%= coord.checkedBy || '---' %></td>
        <td><%= coord.passedAt || '---' %></td>
        <td>
          <% if (coord.passed) { %>
            <a href="/driver/<%= driverId %>/coord-gatepass/<%= index %>" target="_blank" title="הפק Gate Pass">
              <i class="fas fa-print" style="color: #666; font-size: 18px;"></i>
            </a>
          <% } else { %>
            <span style="color: #ccc;">—</span>
          <% } %>
        </td>
<td style="height: 50px;">
  <div style="display: flex; align-items: center; justify-content: center; height: 100%; gap: 10px;">
          <form action="/driver/<%= driverId %>/delete-coordination/<%= index %>" method="POST" onsubmit="return confirm('למחוק תיאום זה?')">
            <button type="submit" style="background:none; border:none; color:#c62828; font-size:18px;">🗑️</button>
          </form>
         <a href="/driver/<%= driverId %>/add-coordination" style="background:none; border:none; color:#004080; font-size:18px; text-decoration:none;">➕</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<% } else { %>
<!-- אין תיאומים בכלל – מציג כפתור הוספה גדול -->
<a href="/driver/<%= driverId %>/add-coordination" class="btn upload" style="background-color:#004080; color:white; text-decoration: none;">
  ➕ הוסף תיאום חדש
</a>

<% } %>

   


      
    <% } else { %>
      <div class="coord-grid">
        <div class="info-item"><label>מספר תיאום</label><span><%= driver.coordinationNumber || '---' %></span></div>
        <div class="info-item"><label>סוג סחורה</label><span><%= driver.goodsType || '---' %></span></div>
        <div class="info-item"><label>מספר משאית</label><span><%= driver.truckNumber || '---' %></span></div>
        <div class="info-item"><label>מספר משטחים</label><span><%= driver.palletCount || '---' %></span></div>
        <div class="info-item"><label>ארגון תורם</label><span><%= driver.donorOrg || '---' %></span></div>
      </div>
    <% } %>

    

    <div class="actions">
      <div class="right-actions">
        <form action="/edit-driver/<%= driverId %>">
          <button class="btn edit"><i class="fas fa-pen"></i> ערוך פרטים</button>
        </form>

        <form action="/upload-image/<%= driverId %>" method="POST" enctype="multipart/form-data">
          <input type="file" id="file" name="driverImage" style="display:none" onchange="this.form.submit()">
          <label for="file" class="btn upload"><i class="fas fa-upload"></i> העלה תמונה</label>
        </form>

<form action="/toggle-flag/<%= driverId %>" method="POST">
  <button class="btn" style="background-color: #ff9800; color: white; border-color: #ff9800;">
    <% if (driver.flagged) { %>
      ❌ הסר דגל
    <% } else { %>
      🚩 סמן דגל
    <% } %>
  </button>
</form>




      <form action="/delete-driver/<%= driverId %>" method="POST" onsubmit="return confirm('האם אתה בטוח שברצונך למחוק את הנהג?')">
  <button class="btn delete"><i class="fas fa-trash"></i> מחק נהג</button>
</form>
      </div>

  
    </div>
  </div>

  <script>
    document.getElementById('driverStatusCheckbox').addEventListener('change', async function () {
      const isChecked = this.checked;

      await fetch('/save-checkbox/<%= driverId %>', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams({ driverStatus: isChecked ? 'on' : '' })
      });

      if (isChecked) {
        await fetch('/mark-statistics/<%= driverId %>', { method: 'POST' });
      }

      location.reload();
    });
  </script>
<script>
  function toggleTransferForm(index) {
    const form = document.getElementById('transferForm' + index);
    if (form) {
      form.style.display = (form.style.display === 'none') ? 'block' : 'none';
    }
  }
</script>



