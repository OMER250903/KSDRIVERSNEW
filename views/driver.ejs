  padding: 10px;
  border-bottom: 1px solid #ddd;
  text-align: center;
}

table.coord-table th {
  background-color: #004080;
  color: white;
  font-weight: 600;
}

table.coord-table tbody tr:hover {
  background-color: #f0f4ff;
}
.print-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #e3f2fd;
  border-radius: 8px;
